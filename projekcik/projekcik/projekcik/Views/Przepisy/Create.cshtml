@model projekcik.Models.Przepis
@{
    ViewBag.Title = "Dodaj swój przepis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>


<p>Tutaj możesz wprowadzić nowy przepis!</p>
<p>Uwaga! Wszystkie pola muszą być wypełnione, w innym wypadku przepis nie zostanie dodany</p>
<form method="post">
    Nazwa:
    @Html.EditorFor(m => m.Nazwa)
    Składniki:
    @Html.EditorFor(m => m.Skladniki)
    Wykonanie:
    @Html.EditorFor(m => m.Wykonanie)
    Ilość porcji:
    @Html.EditorFor(m => m.Kalorie)
    <input type="submit" />
</form>